@{
    ViewData["Title"] = "Maps";
}

<style>
    #map {
        height: 100vh;
    }

    .leaflet-popup-content-wrapper {
        width: 100%;
    }
</style>

<h1>@ViewData["Title"]</h1>

<p>Sample Mapping Setup.</p>
 

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
<div class="container-fluid">
    <div class="row">
        <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="home-tab" data-bs-toggle="tab" data-bs-target="#home" type="button" role="tab" aria-controls="home" aria-selected="true">Home</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="profile-tab" data-bs-toggle="tab" data-bs-target="#profile" type="button" role="tab" aria-controls="profile" aria-selected="false">Coordinates</button>
            </li> 
        </ul>
        <div class="tab-content" id="myTabContent">
            <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                <div class="container-fluid mt-4"> 
                    <div class="row">
                        <form action="" id="post">
                            <div class="mb-3">
                                <label for="LocationName" class="form-label">Location Name</label>
                                <input type="text" class="form-control" name="locationName" id="LocationName" aria-describedby="emailHelp">
                            </div>
                            <div class="mb-3">
                                <label for="Coordinates" class="form-label">Coordinates</label>
                                <input type="text" class="form-control" name="coordinates" id="Coordinates" aria-describedby="emailHelp">
                            </div>
                            <div class="mb-3">
                                <button id="post" class="btn btn-primary btn-sm">Save</button>
                            </div>
                        </form>
                    </div>
                    <div class="row">
                        <div id="map"></div>
                    </div>
                </div>
            </div>
            <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                <div class="container-fluid mt-4"> 
                    <div class="row">
                        <table id="propsTable" class="table table-hover" style="width: 100%;">
                            <thead>
                            <th>Location</th>
                            <th>Coordinates</th>
                            <th>Action</th>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">...</div>
        </div>
    </div> 
</div>

@section Scripts{
    <script>
        $(window).ready(function () {

            // ajax get
            var propsTable = $('#propsTable').DataTable({
                ajax: {
                    type: 'GET',
                    url: '/api/fetch/property',
                    dataSrc: ''
                },
                columns: [
                    {
                        data: "locationName"
                    },
                    {
                        data: "coordinates"
                    },
                    {
                        data: null,
                        render: function () {
                            return '<button class="btn btn-success btn-md">Edit</button><button class="btn btn-primary btn-md mx-1">View</button>'
                        }
                    }
                ]
            })

            $("#post").submit(function (e) {
                e.preventDefault();
                var locationName = $("#LocationName").val();
                var coordinates = $("#Coordinates").val();
                $.ajax({
                    url: "/api/post/propertysave",
                    type: "POST",
                    contentType: "application/json; charset=utf-8",
                    dataType: "json",
                    data: JSON.stringify({
                        locationName: locationName,
                        coordinates: coordinates
                    }),
                    success: function (data) {
                        console.log(data);
                        if (data == '200') {
                            propsTable.ajax.reload();
                        }
                    }
                });
            });
        });
    </script>
}